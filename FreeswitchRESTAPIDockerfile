FROM debian:stretch

# Dockerfile version: 1.0

RUN apt-get update && apt-get install -y gnupg2 wget python-setuptools swig gcc g++ python-dev

# FreeSwitch Installation
RUN wget -O - https://files.freeswitch.org/repo/deb/freeswitch-1.8/fsstretch-archive-keyring.asc | apt-key add -
RUN echo "deb http://files.freeswitch.org/repo/deb/freeswitch-1.8/ stretch main" > /etc/apt/sources.list.d/freeswitch.list
RUN echo "deb-src http://files.freeswitch.org/repo/deb/freeswitch-1.8/ stretch main" >> /etc/apt/sources.list.d/freeswitch.list
RUN apt-get update && apt-get install -y freeswitch-meta-all

# Copying / removing FreeSwitch configuration files
COPY event_socket.conf.xml /etc/freeswitch/autoload_configs/event_socket.conf.xml
RUN rm -rf /etc/freeswitch/directory/default/*.xml /etc/freeswitch/sip_profiles/external* /etc/freeswitch/sip_profiles/internal-ipv6.xml
COPY testplivo1.xml testplivo2.xml /etc/freeswitch/directory/default/
COPY directory_default.xml /etc/freeswitch/directory/default.xml
COPY vars.xml /etc/freeswitch/vars.xml
COPY modules.conf.xml /etc/freeswitch/autoload_configs/modules.conf.xml
COPY dialplan_default.xml /etc/freeswitch/dialplan/default.xml

# Python related Installation
RUN /usr/bin/easy_install pip
RUN /usr/bin/easy_install web.py
RUN /usr/local/bin/pip install python-ESL

# Setup FreeSWITCH API
COPY fs_api.py /opt/
RUN chmod 755 /opt/fs_api.py

COPY startup_script.sh /opt/
RUN chmod 755 /opt/startup_script.sh

EXPOSE 5060/udp 5080/udp 16384-16494/udp
EXPOSE 5060/tcp 5080/tcp 80/tcp

VOLUME ["/var/log/freeswitch"]


####### for debug #######

RUN apt-get install -y vim sngrep
#########################

#ENTRYPOINT ["/usr/bin/freeswitch", "-c"]

#CMD ["/usr/bin/freeswitch", "-ncwait", ";", "/usr/bin/tail", "-f", "/tmp/done.txt"]

#CMD ["/usr/bin/tail", "-f", "/tmp/done.txt"]

CMD ["/bin/bash","/opt/startup_script.sh"]



